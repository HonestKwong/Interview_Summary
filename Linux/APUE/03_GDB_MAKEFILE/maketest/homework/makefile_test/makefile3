src = $(wildcard *.c) # add.c sub.c div1.c hello.c
obj = $(patsubst %.c, %.o, $(src)) # add.o sub.o div1.o hello.o

ALL:a.out

a.out:$(obj)
	gcc $(obj) -o a.out

add.o:add.c
	gcc -c add.c -o add.o
sub.o:sub.c
	gcc -c sub.c -o sub.o
div1.o:div1.c
	gcc -c div1.c -o div1.o
hello.o:hello.c
	gcc -c hello.c -o hello.o
clean:
	-rm -rf $(obj) a.out
